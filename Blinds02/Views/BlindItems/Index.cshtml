@model IEnumerable<Blinds02.Models.BlindItem>

@{
    ViewBag.Title = "Blinds";
}

<h2>List of last calculated Blinds</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Textile.TextileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Width)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Textile.TextileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Width)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BlindItemID }) |
            @Html.ActionLink("Details", "Details", new { id = item.BlindItemID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BlindItemID }) |
            @Html.ActionLink("Add to Order", "Create", "OrderItems", new { blindItemID = item.BlindItemID }, Model)
        </td>
    </tr>
}

</table>
