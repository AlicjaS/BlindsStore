@model IEnumerable<Blinds02.Models.OrderItem>

@{
    ViewBag.Title = "Order List";
}

<h2>Order Items List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BlindItem.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    @{
        double sum = 0;
        foreach (var item in Model)
        {
            sum += item.Price;
        }
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlindItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @String.Format("{0:C}", (Html.DisplayFor(modelItem => item.Price)))
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderItemID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderItemID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderItemID })
            </td>
        </tr>
    }

</table>
@{
    if (Model.Count() > 0)
    {
        <p>
            Total for order no
            @Html.DisplayFor(item => Model.First().OrderID)
            :
            @Html.DisplayFor(item => Model.First().Order.OrderValue)
        </p>
        <p>
            @Html.ActionLink("Order Details", "Details", "Orders", new { id = Model.First().OrderID }, Model)
        </p>
    }
}

